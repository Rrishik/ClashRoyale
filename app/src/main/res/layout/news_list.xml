<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/iv_news_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/tv_news_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_news_image"
        android:layout_alignTop="@+id/iv_news_image"
        android:layout_toRightOf="@+id/iv_news_image"
        android:padding="16dp"
        android:text="Dummy Elixir Content"
        android:gravity="center_vertical"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/tv_news_data"
        android:layout_alignTop="@+id/tv_news_data"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="4sp"
        android:layout_marginRight="4sp"
        android:textAlignment="inherit"
        android:gravity="bottom"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="8dp"
        android:background="#baba" />

</RelativeLayout>